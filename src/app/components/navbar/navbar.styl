@media (min-width: 1200px)
  .container {
    width: 1150px;
  }

.navbar {
  margin: 0;
  padding: 10px 0;
  background-color: white;
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.17)

  .navbar-brand {
    padding:13px 15px;

    img {
      height: 24px;
    }
  }

  .navbar-nav {
    > li:not(.btn-group) a {
      //color: #666;
      //font-weight: bold;
    }

    > .active > a,
    > .active > a:hover,
    > .active > a:focus,
    > li > a:hover,
    > li > a:focus {
      background: none;
      color: #337ab7;
    }
  }

  .btn {
    margin: 4px 0;
    padding: 10px 14px;
  }

  & li + li {
    > .btn {
      margin-left: 10px !important
    }
  }
}

.btn-success {
  background: rgba(57, 181, 74, .8);
  border-color: rgba(57,181,74,.8);

  &:hover {
    background: rgba(57,181,74,1);
    border-color: rgba(57,181,74,1);
  }
}
